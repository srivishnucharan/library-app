{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@library/config/*": ["packages/config/*"],
      "@library/types/*": ["packages/types/src/*"],
      "@library/validation/*": ["packages/validation/src/*"],
      "@library/ui/*": ["packages/ui/src/*"]
    }
  }
}
